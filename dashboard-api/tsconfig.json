{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2021",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "..",
    "paths": {
      "../../core/*": ["../core/*"],
      "../../services/*": ["../services/*"]
    },
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": false,
    "noImplicitAny": false,
    "strictBindCallApply": false,
    "forceConsistentCasingInFileNames": false,
    "noFallthroughCasesInSwitch": false
  },
  "include": ["src/**/*", "../heimdall-framework/core/**/*", "../heimdall-framework/services/**/*", "../heimdall-framework/tests/**/*", "../heimdall-framework/cli/templates/**/*", "../heimdall-framework/cli/formats/**/*"],
  "exclude": ["node_modules", "dist"]
}

